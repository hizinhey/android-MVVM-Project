<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24000000"
    style="@style/AppTheme"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_img_cover"

        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:background="@drawable/login_cover" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/login_cv_title"
        android:layout_width="match_parent"
        android:layout_height="65dp"

        android:layout_alignBottom="@+id/login_img_cover"


        android:textAlignment="center"

        app:cardBackgroundColor="#24000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="-5dp"

            android:fontFamily="@font/roboto_italic"
            android:text="Login"
            android:textColor="@color/colorSecond"

            android:textSize="45sp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="50dp"

        android:layout_below="@id/login_cv_title"
        app:cardCornerRadius="10dp"

        android:layout_marginTop="-5dp"

        app:cardBackgroundColor="#fcfcfc">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="15dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"


                android:drawablePadding="10dp"
                android:hint="Username"
                android:drawableLeft="@drawable/outline_person_24"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="105dp"
            android:layout_marginHorizontal="15dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"


                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/outline_lock_24"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="175dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/roboto_lightitalic"
            android:text="Or"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="225dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="25dp"

                android:background="@drawable/common_google_signin_btn_icon_dark"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="25dp"

                android:background="@drawable/common_google_signin_btn_icon_dark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:layout_marginTop="300dp"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"

                style="@style/Widget.MaterialComponents.Button"

                android:text="Sign In"

                app:cornerRadius="10dp"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="365dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="If you don't have an account?"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:clickable="true"
                android:focusable="true"

                android:textColor="#ea695f"

                android:text="  Register"/>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>